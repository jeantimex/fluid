// MARCHING CUBES - Extract triangles from scalar field
// =============================================================================

@compute @workgroup_size(8, 4, 4)
fn marchingCubes(@builtin(global_invocation_id) id: vec3<u32>) {
  // Each thread processes one cell (not vertex)
  if (id.x >= uniforms.nx || id.y >= uniforms.ny || id.z >= uniforms.nz) { return; }

  let x = id.x;
  let y = id.y;
  let z = id.z;

  // Get field values at 8 corners of this cell
  let v0 = getFieldValue(x, y, z);
  let v1 = getFieldValue(x + 1u, y, z);
  let v2 = getFieldValue(x + 1u, y + 1u, z);
  let v3 = getFieldValue(x, y + 1u, z);
  let v4 = getFieldValue(x, y, z + 1u);
  let v5 = getFieldValue(x + 1u, y, z + 1u);
  let v6 = getFieldValue(x + 1u, y + 1u, z + 1u);
  let v7 = getFieldValue(x, y + 1u, z + 1u);

  // Calculate cube index (which corners are inside the isosurface)
  let iso = uniforms.surfaceLevel;
  var cubeIndex = 0u;
  if (v0 > iso) { cubeIndex |= 1u; }
  if (v1 > iso) { cubeIndex |= 2u; }
  if (v2 > iso) { cubeIndex |= 4u; }
  if (v3 > iso) { cubeIndex |= 8u; }
  if (v4 > iso) { cubeIndex |= 16u; }
  if (v5 > iso) { cubeIndex |= 32u; }
  if (v6 > iso) { cubeIndex |= 64u; }
  if (v7 > iso) { cubeIndex |= 128u; }

  // Skip if entirely inside or outside
  let edges = edgeTable[cubeIndex];
  if (edges == 0u) { return; }

  // Get corner positions
  let p0 = gridVertexToWorld(x, y, z);
  let p1 = gridVertexToWorld(x + 1u, y, z);
  let p2 = gridVertexToWorld(x + 1u, y + 1u, z);
  let p3 = gridVertexToWorld(x, y + 1u, z);
  let p4 = gridVertexToWorld(x, y, z + 1u);
  let p5 = gridVertexToWorld(x + 1u, y, z + 1u);
  let p6 = gridVertexToWorld(x + 1u, y + 1u, z + 1u);
  let p7 = gridVertexToWorld(x, y + 1u, z + 1u);

  // Calculate intersection points along edges
  var vertList: array<vec3<f32>, 12>;
  if ((edges & 1u) != 0u) { vertList[0] = vertexInterp(p0, p1, v0, v1); }
  if ((edges & 2u) != 0u) { vertList[1] = vertexInterp(p1, p2, v1, v2); }
  if ((edges & 4u) != 0u) { vertList[2] = vertexInterp(p2, p3, v2, v3); }
  if ((edges & 8u) != 0u) { vertList[3] = vertexInterp(p3, p0, v3, v0); }
  if ((edges & 16u) != 0u) { vertList[4] = vertexInterp(p4, p5, v4, v5); }
  if ((edges & 32u) != 0u) { vertList[5] = vertexInterp(p5, p6, v5, v6); }
  if ((edges & 64u) != 0u) { vertList[6] = vertexInterp(p6, p7, v6, v7); }
  if ((edges & 128u) != 0u) { vertList[7] = vertexInterp(p7, p4, v7, v4); }
  if ((edges & 256u) != 0u) { vertList[8] = vertexInterp(p0, p4, v0, v4); }
  if ((edges & 512u) != 0u) { vertList[9] = vertexInterp(p1, p5, v1, v5); }
  if ((edges & 1024u) != 0u) { vertList[10] = vertexInterp(p2, p6, v2, v6); }
  if ((edges & 2048u) != 0u) { vertList[11] = vertexInterp(p3, p7, v3, v7); }

  // Generate triangles from the lookup table
  let tableOffset = cubeIndex * 16u;
  for (var i = 0u; i < 15u; i += 3u) {
    let e0 = triTable[tableOffset + i];
    if (e0 < 0) { break; }
    let e1 = triTable[tableOffset + i + 1u];
    let e2 = triTable[tableOffset + i + 2u];

    // Allocate space for this triangle (3 vertices)
    let triIdx = atomicAdd(&triangleCount, 1u);
    // Max triangles = nx * ny * nz * 5 (worst case 5 triangles per cell)
    let maxTriangles = uniforms.nx * uniforms.ny * uniforms.nz * 5u;
    if (triIdx >= maxTriangles) { return; }

    let baseIdx = triIdx * 3u;

    // Store vertices
    let vert0 = vertList[e0];
    let vert1 = vertList[e1];
    let vert2 = vertList[e2];

    vertices[baseIdx] = vec4<f32>(vert0, 1.0);
    vertices[baseIdx + 1u] = vec4<f32>(vert1, 1.0);
    vertices[baseIdx + 2u] = vec4<f32>(vert2, 1.0);

    // Compute and store normals
    normals[baseIdx] = vec4<f32>(computeNormal(vert0), 0.0);
    normals[baseIdx + 1u] = vec4<f32>(computeNormal(vert1), 0.0);
    normals[baseIdx + 2u] = vec4<f32>(computeNormal(vert2), 0.0);
  }
}

