/// Field vertex index (nx+1 x ny+1 x nz+1)
fn fieldIdx(x: u32, y: u32, z: u32) -> u32 {
  let fnx = uniforms.nx + 1u;
  let fny = uniforms.ny + 1u;
  return x + y * fnx + z * fnx * fny;
}

/// Get world position of grid vertex
fn gridVertexToWorld(x: u32, y: u32, z: u32) -> vec3<f32> {
  let dx = uniforms.gridWidth / f32(uniforms.nx);
  let dy = uniforms.gridHeight / f32(uniforms.ny);
  let dz = uniforms.gridDepth / f32(uniforms.nz);
  return vec3<f32>(f32(x) * dx, f32(y) * dy, f32(z) * dz);
}

/// Get scalar field value at grid vertex
fn getFieldValue(x: u32, y: u32, z: u32) -> f32 {
  return scalarField[fieldIdx(x, y, z)];
}

/// Interpolate vertex position along edge where isosurface crosses
fn vertexInterp(p1: vec3<f32>, p2: vec3<f32>, v1: f32, v2: f32) -> vec3<f32> {
  let iso = uniforms.surfaceLevel;
  if (abs(iso - v1) < 0.00001) { return p1; }
  if (abs(iso - v2) < 0.00001) { return p2; }
  if (abs(v1 - v2) < 0.00001) { return p1; }
  let t = (iso - v1) / (v2 - v1);
  return p1 + t * (p2 - p1);
}

/// Compute normal from gradient of scalar field
fn computeNormal(pos: vec3<f32>) -> vec3<f32> {
  let dx = uniforms.gridWidth / f32(uniforms.nx);
  let dy = uniforms.gridHeight / f32(uniforms.ny);
  let dz = uniforms.gridDepth / f32(uniforms.nz);
  let eps = vec3<f32>(dx, dy, dz) * 0.5;

  // Convert world pos to grid coordinates for sampling
  let gx = pos.x / dx;
  let gy = pos.y / dy;
  let gz = pos.z / dz;

  // Sample at +/- epsilon (clamped)
  let x0 = u32(max(0.0, gx - 0.5));
  let x1 = u32(min(f32(uniforms.nx), gx + 0.5));
  let y0 = u32(max(0.0, gy - 0.5));
  let y1 = u32(min(f32(uniforms.ny), gy + 0.5));
  let z0 = u32(max(0.0, gz - 0.5));
  let z1 = u32(min(f32(uniforms.nz), gz + 0.5));

  let gradX = getFieldValue(x1, u32(gy), u32(gz)) - getFieldValue(x0, u32(gy), u32(gz));
  let gradY = getFieldValue(u32(gx), y1, u32(gz)) - getFieldValue(u32(gx), y0, u32(gz));
  let gradZ = getFieldValue(u32(gx), u32(gy), z1) - getFieldValue(u32(gx), u32(gy), z0);

  let grad = vec3<f32>(gradX, gradY, gradZ);
  let len = length(grad);
  if (len > 0.0001) {
    return -grad / len; // Negative because we want outward-facing normals
  }
  return vec3<f32>(0.0, 1.0, 0.0);
}

